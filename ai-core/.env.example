# ================================= Primo (Discovery Search) ==========================================
PRIMO_SCOPE=MyInst_and_CI
PRIMO_API_KEY=your_primo_api_key
PRIMO_SEARCH_URL=https://api-na.hosted.exlibrisgroup.com/primo/v1/search?
PRIMO_VID=your_primo_vid

# ================================= LLM ==========================================
OPENAI_ORGANIZATION_ID=your_org_id
OPENAI_API_KEY=sk-...
OPENAI_MODEL=o4-mini

# ================================= Database & Vector DB ==========================================
# PostgreSQL Database
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Weaviate Vector Database
WEAVIATE_API_KEY=your_weaviate_api_key
WEAVIATE_HOST=your-instance.weaviate.cloud
WEAVIATE_SCHEME=https

# ================================= Google Site Search ==========================================
GOOGLE_LIBRARY_SEARCH_CSE_ID=your_cse_id
GOOGLE_API_KEY=your_google_api_key

# ================================= SpringShare Products ==========================================
# Building IDs (customize for your institution)
OXFORD_KING_LIBRARY=your_building_id
OXFORD_ART_ARCHITECTURE_LIBRARY=your_building_id
OXFORD_ARMSTRONG_STUDENT_CENTER=your_building_id
HAMILTON_RENTSCHLER_LIBRARY=your_building_id
MIDDLETOWN_GARDNER_HARVEY_LIBRARY=your_building_id

# LibCal OAuth
LIBCAL_OAUTH_URL=https://your-institution.libcal.com/api/1.1/oauth/token
LIBCAL_CLIENT_ID=your_client_id
LIBCAL_CLIENT_SECRET=your_client_secret
LIBCAL_GRANT_TYPE=client_credentials
LIBCAL_SEARCH_AVAILABLE_URL=https://your-institution.libcal.com/api/1.1/space/search/hourly
LIBCAL_ROOM_INFO_URL=https://your-institution.libcal.com/api/1.1/space/items
LIBCAL_HOUR_URL=https://your-institution.libcal.com/api/1.1/hours

# LibApps/LibGuides OAuth
LIBAPPS_OAUTH_URL=https://lgapi-us.libapps.com/1.2/oauth/token
LIBAPPS_CLIENT_ID=your_client_id
LIBAPPS_CLIENT_SECRET=your_client_secret
LIBAPPS_GRANT_TYPE=client_credentials

# LibAnswers
LIB_ANS_CLIENT_ID=your_client_id
LIB_ANS_CLIENT_SECRET=your_client_secret
LIB_ANS_OAUTH_URL=https://libanswers.your-institution.edu/api/1.1/oauth/token
LIB_ANS_GRANT_TYPE=client_credentials
QUEUE_ID=your_queue_id

# ================================= System Configuration ==========================================
# Environment: 'development' or 'production'
NODE_ENV=development

# Development: Use localhost URLs
# FRONTEND_URL=http://localhost:5173

# Production: Use your institution's domain
FRONTEND_URL=https://library.your-institution.edu

# Port configuration
BACKEND_PORT=8000
FRONTEND_PORT=5173

# Base path for Socket.IO
SOCKET_PATH=/smartchatbot
